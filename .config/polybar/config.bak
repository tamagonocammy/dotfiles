[colors]
background = #00282a36
;background = #222
background-alt = #00475a36
foreground = #f8f8f2
;foreground = #dfdfdf
foreground-alt = #f8f8f2
primary = #ff79c6
secondary = #f8f8f2
alert = ${xrdb:color3:#ff5555}
color2 = ${xrdb:color2:#bd93f9}


[bar/burs]
;monitor = ${env:MONITOR:eDP1}
width = 100%
height = 24
offset-x = 2%
offset-y = 0%

bar-offset-x = 40
bar-top-gap = 20
bar-bottom-gap = 20
fixed-center = true

background = #aa282a36
foreground =  #f8f8f2

line-size = 4
line-color = #00000000

border-size = 3
  border-color = #00000000
enable-ipc = true
;bottom = true
border-left-size = 10
border-right-size = 10
border-top-size = 10
;border-bottom-size = 10

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = "SauceCodePro Nerd Font:pixelsize=8;1"
font-1 = "Wuncon Siji:style=bold:pixelsize=8:antialias=false;1"
font-2 = Material Icons:size=8;2
font-3 = M+ 1mn:pixelsize=8;1

modules-left = i3 bspwm mpd
modules-center =
modules-right =   volume date battery wlan powermenu

tray-detached = false
tray-position = right
tray-offset-x = -25
tray-offset-y = 0
tray-maxsize = 16
tray-padding = 0
tray-scale = 1

wm-restack = i3

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50
[module/updates-arch-combined]
type = custom/script
exec = ~/scripts/updates-arch-combined.sh
interval = 600
[module/wlan]

type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected =  %essid%


format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = %ifname% disconnected
label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = Ôá´
ramp-signal-1 = Ôá´
ramp-signal-2 = Ôá´
ramp-signal-3 = Ôá´
ramp-signal-4 = Ôá´
ramp-signal-foreground = ${colors.foreground-alt}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-prefix = "ÓÄ™ "
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/notification-reddit]
type = custom/script
exec = ~/scripts/notification-reddit.sh
interval = 60

[module/bspwm]
type = internal/bspwm

ws-icon-0 = "1:‰∏Ä;‰∏Ä"
ws-icon-1 = "2:‰∫å;‰∫å"
ws-icon-2 = "3:‰∏â;‰∏â"
